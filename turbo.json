{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["package.json", "turbo.json", "pnpm-workspace.yaml", ".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@ticketsbot/core#db:generate"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "!**/*.test.{ts,tsx}",
        "!**/*.spec.{ts,tsx}",
        "!**/node_modules/**"
      ],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "DISCORD_CLIENT_ID",
        "DISCORD_CLIENT_SECRET",
        "DISCORD_TOKEN",
        "BOT_WEBHOOK_SECRET",
        "WEB_URL",
        "WEB_PORT",
        "API_URL",
        "REDIS_URL",
        "NEXT_PUBLIC_*",
        "NEXT_PHASE",
        "NEXT_TELEMETRY_DISABLED",
        "POSTHOG_API_KEY"
      ]
    },
    "dev": {
      "dependsOn": ["@ticketsbot/core#db:generate"],
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL",
        "BETTER_AUTH_SECRET",
        "DISCORD_*",
        "BOT_WEBHOOK_SECRET",
        "NEXT_PUBLIC_*",
        "API_URL",
        "API_HOST",
        "API_SECRET",
        "WEB_URL",
        "WEB_PORT",
        "DEV_*",
        "COOKIE_*",
        "RATE_LIMIT_*",
        "LOG_*",
        "*_CACHE_TTL",
        "ALLOWED_ORIGINS",
        "POSTHOG_API_KEY"
      ]
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "REDIS_URL",
        "BETTER_AUTH_SECRET",
        "DISCORD_*",
        "BOT_WEBHOOK_SECRET",
        "NEXT_PUBLIC_*",
        "API_URL",
        "API_HOST",
        "API_SECRET",
        "WEB_URL",
        "WEB_PORT",
        "COOKIE_*",
        "RATE_LIMIT_*",
        "LOG_*",
        "*_CACHE_TTL",
        "POSTHOG_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**", "eslint.config.*", ".eslintrc.*"],
      "outputs": [],
      "env": ["NEXT_PHASE", "NEXT_TELEMETRY_DISABLED", "POSTHOG_API_KEY", "BOT_WEBHOOK_SECRET"]
    },
    "typecheck": {
      "dependsOn": ["^build", "@ticketsbot/core#db:generate"],
      "inputs": ["src/**", "tsconfig.json", "tsconfig.tsbuildinfo"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "tests/**", "vitest.config.*"],
      "outputs": ["coverage/**"],
      "cache": false,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:hurl": {
      "dependsOn": ["^build"],
      "inputs": ["tests/**/*.hurl", "tests/run-tests.sh"],
      "outputs": ["tests/reports/**"],
      "env": ["TEST_USER_TOKEN", "TEST_GUILD_ID", "API_URL"],
      "cache": false
    },
    "db:generate": {
      "cache": true,
      "inputs": ["prisma/**/*.prisma"],
      "outputs": ["node_modules/.prisma/**"],
      "env": ["DATABASE_URL"]
    },
    "db:push": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:push:force": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}
